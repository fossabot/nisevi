%p
  %strong Title:
  = @article.title
%p
  %strong Text:
  = @article.text

- unless @article.comments.blank?
  %h2 Comments
  = render @article.comments

- if user_signed_in?
  %h2 Add a comment:
  = render 'comments/form'
- else
  %p
    If you want to comment, please
    = link_to "sign in", new_user_session_path

= link_to 'Back', articles_path
