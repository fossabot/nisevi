= form_for(article) do |f|
  - if article.errors.any?
    #error_explanation
      %h2
        = pluralize(article.errors.count, 'error')
        prohibited this portfolio from being saved:
      %ul
        - article.errors.full_messages.each do |message|
          %li= message
  = render partial: 'shared/fields', locals: {f: f}
  <!-- == PUBLISHED | ACCEPT COMMENTS | PUBLICATION DATE == -->
  .form-group.col-xs-12.col-md-12

  <!-- == SUBMIT == -->
  .form-group.col-xs-12.col-md-12
    .col-sm-8.col-sm-offset-4.col-md-8.col-md-offset-2.text-right
      - if article.persisted?
        = f.submit 'Edit Article', class: 'black-button black-to-white'
      - elsif article.new_record?
        = f.submit 'Create Article', class: 'black-button black-to-white'
