#devise_new_password.devise-container.container
  .row
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      %h1.text-center Forgot your password?
    .col-md-6.col-md-offset-3
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!
        .form-group
          .col-xs-12.col-sm-12.col-md-12.col-lg-12
            = f.label :email, class: "col-xs-12 col-sm-3 control-label"
          .col-xs-12.col-sm-12.col-md-12.col-lg-12.row-btm20
            = f.email_field :email, autofocus: true, autocomplete: "off", required: true,  class: "form-control input-lg", placeholder: "Email"
        .form-group
          .col-xs-12.col-sm-12.col-md-12.col-lg-12.row-btm20
            = f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block"
  .row
    .col-md-6.col-md-offset-3
      = render "devise/shared/links"
