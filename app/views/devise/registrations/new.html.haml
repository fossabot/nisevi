#devise_new_registration.devise-container.container
  .row
    .col-md-8.col-md-offset-2
      %h2.text-center Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form-group.col-xs-12.col-md-12
          = f.label :email, class: "col-xs-12 col-sm-5 control-label"
          .col-sm-7.col-xs-12
            = f.email_field :email, autofocus: true, autocomplete: "off", required: true,  class: "form-control", placeholder: "Email"
        .form-group.col-xs-12.col-md-12
          = f.label :password, class: "col-xs-12 col-sm-7 control-label"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          .col-sm-7.col-sm-offset-5.col-xs-12
            = f.password_field :password, autocomplete: "off", class: "form-control", required: true
        .form-group.col-xs-12.col-md-12
          = f.label :password_confirmation, class: "col-xs-12 col-sm-5 control-label"
          .col-sm-7.col-xs-12
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true
        .form-group.col-xs-12.col-sm-7.col-sm-offset-5.col-md-7.col-md-offset-5
          = f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"
  .row
    .col-md-12.text-center
      = render "devise/shared/links"
