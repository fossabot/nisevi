#devise_new_password.devise-container.container
  .row
    .col-md-6.col-md-offset-3
      %h2.text-center Resend confirmation instructions
      = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!
        .form-group.col-xs-12.col-md-12
          = f.label :email, class: "col-xs-12 col-sm-3 control-label"
          .col-sm-9.col-xs-12
            = f.email_field :email, autofocus: true, autocomplete: "off", required: true,  class: "form-control", placeholder: "Email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
        .form-group.col-xs-12.col-sm-9.col-sm-offset-3.col-md-9.col-md-offset-3
          = f.submit "Resend confirmation instructions", class: "btn btn-lg btn-primary btn-block"
  .row
    .col-md-12.text-center
      = render "devise/shared/links"
